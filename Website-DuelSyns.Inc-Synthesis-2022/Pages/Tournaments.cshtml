@page
@model Website_DuelSyns.Inc_Synthesis_2022.Pages.TournamentsModel
@{
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<div class="welcome-title">
<h1>Tournaments</h1>
</div>
 
<h1>@Model.Message</h1>

@if (Model.availableTournaments != null)
{
    @foreach (var item in Model.availableTournaments)
    {
        <div class= "SignUpForTournament">
        <h1>@item.TournamentName</h1>
        <h3><p>ID : @item.TournamentId</p>
        <p>Type: @item.SportTypeDTO.Name</p>
        <p>Start Date : @item.StartingDate.ToString("dd/MM/yyyy")</p>
        <p>End Date : @item.EndDate.ToString("dd/MM/yyyy")</p>
        <p>Spots left : @(@item.MaxPlayers - @item.RegisteredPlayers)</p></h3>
        <form class="Register" method="post"> <button class = "Register" asp-route-id="@item.TournamentId" >Register</button></form>
        </div>
        <br />
    }
}   
else
{
    <div class= "SignUpForTournamentUp">
    <h3><p>No Tournaments available for registering</p></h3>
    </div>
    <br />
}

